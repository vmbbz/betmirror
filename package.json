{
  "name": "bet-mirror",
  "version": "3.6.0",
  "private": false,
  "description": "Bet Mirror: Polymarket Copy-Trading & Money Markets Terminal",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently \"npm run start:server\" \"npm run dev\"",
    "build": "tsc --build && vite build",
    "build:backend": "tsc",
    "preview": "vite preview",
    "start": "npm run build && npm run build:backend && node --experimental-specifier-resolution=node dist-node/server/server.js",
    "start:server": "npm run build:backend && node --experimental-specifier-resolution=node dist-node/server/server.js",
    "start:cli": "npm run build:backend && node --experimental-specifier-resolution=node dist-node/app/main.js",
    "generate:wallet": "node --loader ts-node/esm --experimental-specifier-resolution=node src/cli/generate-wallet.ts",
    "db:wipe": "node --loader ts-node/esm --experimental-specifier-resolution=node src/cli/wipe-db.ts",
    "rescue": "node --loader ts-node/esm --experimental-specifier-resolution=node src/cli/rescue-funds.ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@lifi/sdk": "^3.1.0",
    "@polymarket/builder-relayer-client": "^0.0.6",
    "@polymarket/builder-signing-sdk": "^0.0.8",
    "@polymarket/clob-client": "^4.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react-toastify": "^4.0.2",
    "@types/ws": "^8.18.1",
    "@zerodev/ecdsa-validator": "^5.3.0",
    "@zerodev/permissions": "^5.3.0",
    "@zerodev/sdk": "^5.3.0",
    "axios": "^1.7.9",
    "axios-cookiejar-support": "^5.0.0",
    "body-parser": "^1.20.2",
    "chalk": "^5.4.1",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.2",
    "ethers-v5": "npm:ethers@5.7.2",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^8.9.5",
    "ora": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.6.0",
    "tailwind-merge": "^2.2.1",
    "tough-cookie": "^4.1.3",
    "twilio": "^4.23.0",
    "typescript": "^5.7.3",
    "viem": "^2.17.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "postcss": "^8.4.35",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "vite": "^5.1.5",
    "vite-plugin-node-polyfills": "^0.21.0"
  }
}
